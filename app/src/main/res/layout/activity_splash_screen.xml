<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/splashScreenAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splashScreenLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="@string/app_name_year"
        android:textSize="36sp"/>

    <ImageView
        android:id="@+id/splashScreenLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/toh_logo"
        android:contentDescription="@string/imageDescriptionTOHLogo"
        android:onClick="goToBonusList"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashScreenLogo"
        android:layout_above="@id/splashScreenSettingsIcon"
        android:background="#FF303030"
        android:onClick="goToBonusList"/>

    <ImageView
        android:id="@+id/splashScreenSettingsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_settings_white_24dp"
        android:contentDescription="@string/imageDescriptionSettingsIcon"
        android:onClick="goToAppSettings"/>

    <TextView
        android:id="@+id/splashScreenAppCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createdBy"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>
